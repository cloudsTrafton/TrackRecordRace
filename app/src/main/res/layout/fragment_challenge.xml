<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:theme="@style/MyMaterialTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.seniorproject.trafton.trackrecordrace.ChallengeFragment">
<RelativeLayout
    android:id="@+id/layout_text_challenge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/losses_challenges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetching Challenges..."
        android:layout_margin="10sp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/SentChallengeCardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        />


</RelativeLayout>


    <Button
        android:id="@+id/new_challenge_button"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layout_text_challenge"
        android:text="New Challenge"
        android:textColor="#ffffff"

        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPrimary"
        />




</RelativeLayout>